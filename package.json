{
  "name": "next_money",
  "version": "0.1.0",
  "description": "PWA con Next.js 16, Webpack 5, Turbopack (dev opcional), Sass/SCSS, Bootstrap, Animate.css, FontAwesome, Geist/Tailwind utils.",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "dev:webpack": "NEXT_TELEMETRY_DISABLED=1 next dev --webpack",
    "check-offline": "node check-offline.js",
    "check-react": "node check-react-version.js",
    "check-pwa": "node check-pwa.js",
    "check-node": "node check-node.js",
    "check-sw": "node check-sw.js",
    "verify": "npm run check-node && npm run check-pwa && npm run check-sw && npm run check-offline && npm run check-react",
    "prebuild": "npm run check-node && npm run check-pwa && npm run check-react",
    "build": "next build --webpack",
    "build:webpack": "next build --webpack",
    "build:turbo": "next build --turbo",
    "postbuild": "npm run check-sw && npm run check-offline",
    "start": "next start",
    "lint": "eslint .",
    "clean-node": "rimraf node_modules package-lock.json && (npm cache clean --force || echo '⚠️  Cache lock ignored')",
    "clean-public": "rimraf ./public/sw.js ./public/fallback-*.js ./public/workbox-*.js ./public/_next/static/workbox/",
    "clean-next": "rimraf ./.next",
    "clean": "npm run clean-public && npm run clean-next && npm run clean-node",
    "safe-update": "npm install && npm update && npm audit fix && npm run verify",
    "clean-update": "npm run clean && npm run safe-update",
    "update": "npx npm-check-updates -u && npm install && npm audit fix && npm run verify",
    "ci-update": "npm ci && npm run verify"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "7.1.0",
    "@popperjs/core": "2.11.8",
    "animate.css": "4.1.1",
    "bootstrap": "5.3.8",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "dotenv": "17.2.3",
    "framer-motion": "12.23.24",
    "lucide-react": "0.552.0",
    "next": "16.0.1",
    "next-pwa": "5.6.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "3.3.1",
    "tailwindcss-animate": "1.0.7",
    "workbox-window": "7.3.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "4.0.0",
    "@types/bootstrap": "5.2.10",
    "@types/glob": "9.0.0",
    "@types/node": "24.9.2",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "babel-plugin-react-compiler": "1.0.0",
    "chalk": "5.6.2",
    "cross-env": "10.1.0",
    "eslint": "9.14.0",
    "eslint-config-next": "16.0.1",
    "rimraf": "6.0.1",
    "sass": "1.93.3",
    "sass-loader": "14.2.1",
    "semver": "7.7.3",
    "typescript": "5.6.3",
    "webpack": "5.95.0",
    "webpack-bundle-analyzer": "4.10.2"
  },
  "engines": {
    "node": ">=18.18.0 <23",
    "npm": ">=9.0.0 <=11.6.2"
  },
  "overrides": {
    "braces": "3.0.3",
    "micromatch": "4.0.8",
    "anymatch": "3.1.3",
    "readdirp": "3.6.0",
    "chokidar": "3.5.3",
    "watchpack": "2.4.0",
    "watchpack-chokidar2": "3.0.0"
  },
  "packageManager": "npm@10.9.0"
}
